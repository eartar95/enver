<xsl:transform version="1.0"
  xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
  xmlns:sap="http://www.sap.com/sapxsl"
>

<xsl:strip-space elements="*"/>

<xsl:template match="/">
    <Form xmlns:xfadata="http://www.xfa.org/schema/xfa-data/1.0/">
      <ZEA_I_HDR_ACCOUNTING>
        <xsl:for-each select="//ZEA_I_HDR_ACCOUNTING">
          <CompanyCode><xsl:value-of select="COMPANYCODE"/></CompanyCode>
          <FiscalYear><xsl:value-of select="FISCALYEAR"/></FiscalYear>
          <AccountingDocument><xsl:value-of select="ACCOUNTINGDOCUMENT"/></AccountingDocument>
        <_Items>
          <xsl:for-each select="//ZEA_I_ITEM_ACCOUNTING">
        <ZEA_I_ITEM_ACCOUNTING>
          <CompanyCode><xsl:value-of select="COMPANYCODE"/></CompanyCode>
          <FiscalYear><xsl:value-of select="FISCALYEAR"/></FiscalYear>
          <AccountingDocument><xsl:value-of select="ACCOUNTINGDOCUMENT"/></AccountingDocument>
          <GLAccount><xsl:value-of select="GLACCOUNT"/></GLAccount>
          <Ledger><xsl:value-of select="LEDGER"/></Ledger>

        </ZEA_I_ITEM_ACCOUNTING>
          </xsl:for-each>
        </_Items>
        </xsl:for-each>
      </ZEA_I_HDR_ACCOUNTING>

    </Form>
</xsl:template>

</xsl:transform>
